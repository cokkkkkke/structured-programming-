#include<stdio.h>
int factorial_recursive(int n){
    if(n==0||n==1)
        return 1;
    else
        return n*factorial_recursive(n-1);
}
 
int main(){
    int n,i,fact=1;
    printf("Enter a number: ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
        fact*=i;
    printf("Factorial using for loop: %d\n",fact);
    printf("Factorial using recursion: %d\n",factorial_recursive(n));
    return 0;

